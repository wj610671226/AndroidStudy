<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jhtwl.safty360.PhoneTheft.SettingGuidActivity1">

    <TextView
        style="@style/AppNavigationStyle"
        android:text="1.欢迎使用手机防盗"
        />

    <TextView
        style="@style/SetingContentStyle"
        android:text="您的手机防盗卫士:"
        android:paddingTop="5dp"
        />
    <TextView
        style="@style/SetingGuide1Style"
        android:text="SIM卡变更报警"
        />
    <TextView
        style="@style/SetingGuide1Style"
        android:text="GPS追踪"
        />
    <TextView
        style="@style/SetingGuide1Style"
        android:text="远程销毁数据"
        />
    <TextView
        style="@style/SetingGuide1Style"
        android:text="远程锁屏"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/presence_online"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/presence_invisible"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/presence_invisible"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/presence_invisible"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setup1"
            android:layout_centerInParent="true"
            />

        <Button
            style="@style/SetingNextBtnStyle"
            android:text="下一步"
            />
    </RelativeLayout>
</LinearLayout>

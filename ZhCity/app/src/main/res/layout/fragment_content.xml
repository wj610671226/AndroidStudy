<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.jhtwl.zhcity.View.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></com.example.jhtwl.zhcity.View.NoScrollViewPager>

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_tab_bg">

        <RadioButton
            android:id="@+id/homep"
            style="@style/TabBarItemStyle"
            android:text="首页"
            android:drawableTop="@drawable/tabitem_home_selector"
            />

        <RadioButton
            android:id="@+id/news"
            style="@style/TabBarItemStyle"
            android:text="新闻中心"
            android:drawableTop="@drawable/tabitem_news_selector"
            />

        <RadioButton
            android:id="@+id/serves"
            style="@style/TabBarItemStyle"
            android:text="智慧服务"
            android:drawableTop="@drawable/tabitem_serves_selector"
            />

        <RadioButton
            android:id="@+id/gova"
            style="@style/TabBarItemStyle"
            android:text="政务"
            android:drawableTop="@drawable/tabitem_govi_selector"
            />
        <RadioButton
            android:id="@+id/setting"
            style="@style/TabBarItemStyle"
            android:text="设置"
            android:drawableTop="@drawable/tabitem_setting_selector"
            />
    </RadioGroup>
</LinearLayout>